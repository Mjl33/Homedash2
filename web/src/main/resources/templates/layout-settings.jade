extends ./layout.jade

block css
    link(href='/css/layout-settings.css', rel='stylesheet')

block content
    .head-links
        a(href="/") << Back
    h1
        | Layout Settings
        a(href="/settings") Settings

    p Here you can create new layouts to fit your devices the best

    for layout in layouts
        .layout.row(data-id="#{layout.getId()}")
            .layout-display.col-sm-8(data-max="#{layout.getMaxGridWidth()}")

            .layout-name.col-sm-4
                p
                    strong.name #{layout.getName()}
                    if layout.getId() > 3
                        a(class="rename")
                            i.fa.fa-pencil
                        a(class="delete")
                            i.fa.fa-times

                p
                    | Grid Width:
                    span.grid-width
                p
                    | Min. window width:
                    span.screen-width
                if layout.getId() > 3
                    p
                        a(class="remove")
                            i.fa.fa-minus
                        a(class="add")
                            i.fa.fa-plus

    button#add-layout.btn.btn-primary
        i.fa.fa-plus
        | Add layout




block scripts
    script(src="/js/layout-settings.js")

